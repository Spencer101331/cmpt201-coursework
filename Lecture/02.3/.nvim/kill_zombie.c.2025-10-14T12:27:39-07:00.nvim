#include <stdio.h>
#include <sys/types.h>
#include <sys/wait.h>
#include <unistd.h>

int main() {
  pid_t pid = fork();
  for (int i = 0; i < 5; i++) {
    if (pid) {
      int wstatus;
      while (waitpid(-1, &wstatus, WNOHANG) > 0) {
        printf("Reaped child with PID %d\n", pid);
      }
      pid = fork();
      continue;
    } else {
      sleep(1);
      printf("In child\n");
    }
  }
}
